ENABLE_REPORTS=1

# Database Configuration (PostgreSQL Dev)
DATABASE_URL=postgresql+psycopg://obyra:obyra_dev_password@localhost:5436/obyra_dev
ALEMBIC_DATABASE_URL=postgresql+psycopg://obyra_migrator:migrator_dev_password@localhost:5436/obyra_dev

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6381/0
RATE_LIMITER_STORAGE=redis://localhost:6381/1

# Flask Configuration
SECRET_KEY=dev-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=1

# Security Configuration
# IMPORTANT: Super admin privileges are managed via the is_super_admin flag in the database
# To grant super admin access: UPDATE usuarios SET is_super_admin = true WHERE email = 'admin@obyra.com';
# Do NOT add emails to a whitelist in code - use database flags for security

# Docker-Specific Configuration
POSTGRES_DB=obyra_dev
POSTGRES_USER=obyra
POSTGRES_PASSWORD=obyra_dev_password
POSTGRES_MIGRATOR_USER=obyra_migrator
POSTGRES_MIGRATOR_PASSWORD=migrator_dev_password

# Celery (for Docker)
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# External APIs Configuration
# OpenAI API Key (for IA features in presupuestos)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Optional: Google Maps API (for geocoding)
MAPS_API_KEY=

# Optional: SMTP Email Configuration
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=

# Optional: OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# Optional: MercadoPago Configuration
MP_ACCESS_TOKEN=
MP_WEBHOOK_PUBLIC_URL=

